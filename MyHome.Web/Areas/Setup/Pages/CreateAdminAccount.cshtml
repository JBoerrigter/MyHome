@page
@model CreateAdminAccountModel
@{
    ViewData["Title"] = "Create Admin Account";
}

<h1>@ViewData["Title"]</h1>

<form id="registerForm" method="post" class="col-sm-12 col-md-8 col-lg-6">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-floating mt-3">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Input.Email"></label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-floating mt-3">
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
        <label asp-for="Input.Password"></label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-floating mt-3">
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
        <label asp-for="Input.ConfirmPassword"></label>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-3">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
