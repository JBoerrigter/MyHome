@page
@model CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="main-container">
    <div class="main-header">
        <h1>@ViewData["Title"]</h1>
        <div class="main-actions"></div>
    </div>
    <div class="main-content">
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="MeterReadingType.Name" class="control-label"></label>
                        <input asp-for="MeterReadingType.Name" class="form-control" />
                        <span asp-validation-for="MeterReadingType.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MeterReadingType.Unit" class="control-label"></label>
                        <input asp-for="MeterReadingType.Unit" class="form-control" />
                        <span asp-validation-for="MeterReadingType.Unit" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Create" class="btn btn-primary" /> |
                        <a asp-page="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts { @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); } }
