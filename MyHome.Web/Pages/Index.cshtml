@page
@model IndexModel
@using System.Security.Claims
@section PageActions
{
    @if (Model.Family is not null)
    {
<a asp-page="/Houses/Create" class="btn btn-success">Add House</a>
    }
}
@{
    @if (Model.Family is null)
    {
        ViewData["Title"] = "Dashboard";
    }
    else
    {
        ViewData["Title"] = Model.Family.Name + " - Häuser";
    }
}

@if (Model.Family is null)
{
    <section>

        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">You don't have a family yet.</h4>
            <p>Do you want to create a family?</p>
            <a asp-page="Families/Create" class="btn btn-success">Create Family</a>
        </div>

        <div class="alert alert-warning" role="alert">
            <p>You can also join a family with an personal invite code:</p>
            <input type="text" class="form-control" placeholder="Invitecode" />
            <input type="button" class="btn btn-primary mt-2" value="Join Family" />
        </div>

    </section>
}
else
{
    <section class="houses">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td scope="col">Straße</td>
                    <td scope="col">Nr</td>
                    <td scope="col">Plz</td>
                    <td scope="col">Ort</td>
                    <td scope="col">Actions</td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Family.Houses is null || !Model.Family.Houses.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center">Sie haben keine Häuser</td>
                    </tr>
                }
                else
                {
                    foreach (House house in Model.Family.Houses)
                    {
                        <tr>
                            <td>@house.Street</td>
                            <td>@house.Number</td>
                            <td>@house.PostalCode</td>
                            <td>@house.City</td>
                            <td>
                                <div class="d-flex">
                                    <a asp-page="/Houses/Details" asp-route-id="@house.Id" class="mx-1" style="font-size: 16pt;">
                                        <i class='bx bx-pencil'></i>
                                    </a>
                                    <a asp-page="/Houses/Delete" asp-route-id="@house.Id" class="mx-1" style="font-size: 16pt;">
                                        <i class='bx bx-trash'></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </section>
}