<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyHome - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/new-style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyHome.Web.styles.css" asp-append-version="true" />
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    @RenderSection("Styles", required: false)
</head>

<body class="@(Context.Request.Cookies["darkmode"] == "True" ? "dark-mode" : "")">
    <nav class="sidebar">
        <header>
            <div class="image-text">
                <span class="image">
                    <img src="~/img/home-52.svg" alt="">
                </span>

                <div class="text logo-text">
                    <span class="name">MyHome</span>
                    <span class="profession"></span>
                </div>
            </div>

            <i class='bx bx-chevron-right toggle'></i>
        </header>

        <div class="menu-bar">
            <div class="menu">

                <li class="search-box">
                    <i class='bx bx-search icon'></i>
                    <input type="text" placeholder="Search...">
                </li>
                <partial name="_NavigationPartial" />
            </div>

            <div class="bottom-content">

                <li class="nav-link">
                    <a href="/Settings">
                        <i class='bx bx-cog icon'></i>
                        <span class="text nav-text">Settings</span>
                    </a>
                </li>

                <partial name="_LoginPartial" />
            </div>
        </div>

    </nav>

    <main role="main" class="content">
        <partial name="_PageIndicatorPartial" />

        @RenderBody()

    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>