@page
@model CreateModel
@{
    ViewData["Title"] = "Add a new House";
}

<div class="site-header">
    <h1>@ViewData["Title"]</h1>
</div>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Street" class="form-label">Straße</label>
        <input type="text" asp-for="Input.Street" class="form-control" />
        <span asp-validation-for="Input.Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Number" class="form-label">Hausnummer</label>
        <input type="text" asp-for="Input.Number" class="form-control" />
        <span asp-validation-for="Input.Number" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.PostalCode" class="form-label">PLZ</label>
        <input type="text" asp-for="Input.PostalCode" class="form-control" />
        <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.City" class="form-label">Ort</label>
        <input type="text" asp-for="Input.City" class="form-control" />
        <span asp-validation-for="Input.City" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-success mt-3" value="Create" />
</form>

<div>
    <a asp-page="/Index">Back</a>
</div>